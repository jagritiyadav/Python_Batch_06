# Control Statements in Loops (Python)

print("---- Example of break ----")
for i in range(5):
    if i == 3:
        break   # loop will stop when i = 3
    print(i)
# Output: 0, 1, 2


print("\n---- Example of continue ----")
for i in range(5):
    if i == 3:
        continue   # skip iteration when i = 3
    print(i)
# Output: 0, 1, 2, 4


print("\n---- Example of pass ----")
for i in range(5):
    if i == 3:
        pass   # does nothing, loop continues
    print(i)
# Output: 0, 1, 2, 3, 4
